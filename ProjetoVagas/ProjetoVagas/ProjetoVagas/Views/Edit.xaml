<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoVagas.Views.Edit">
    <ContentPage.Content>

        <ScrollView>

            <StackLayout Margin="10" 
                         Spacing="15">

                <StackLayout Orientation="Horizontal" 
                             HeightRequest="50">

                    <Label Text="Vagas"
                    FontSize="35"
                    FontAttributes="Bold"
                    TextColor="#E38902"
                    VerticalOptions="End" 
                    HorizontalOptions="Start" 
                    />

                    <Label Text="encontre seu emprego aqui"
                    TextColor="#E38902"
                    FontSize="14"
                    VerticalOptions="End" 
                    HorizontalOptions="StartAndExpand" />

                </StackLayout>

                <StackLayout Spacing="5">

                    <Entry Placeholder="Nome da vaga"
                           FontSize="Medium"
                           PlaceholderColor="#2E2E2E"
                           TextColor="#FF9900"
                           x:Name="JobTitle"
                           Text="{Binding JobTitle}"/>

                    <Entry Placeholder="Empresa"
                           FontSize="Medium"
                           PlaceholderColor="#2E2E2E"
                           TextColor="#FF9900"
                           x:Name="Companies"
                           Text="{Binding Companies}"/>

                    <Entry Placeholder="Quantidade"
                           Keyboard="Numeric"
                           FontSize="Medium"
                           PlaceholderColor="#2E2E2E"
                           TextColor="#FF9900"
                           x:Name="Quantity"
                           Text="{Binding Quantity}"/>

                    <Entry Placeholder="Cidade"
                           FontSize="Medium"
                           PlaceholderColor="#2E2E2E"
                           TextColor="#FF9900"
                           x:Name="City"
                           Text="{Binding City}"/>

                    <Entry Placeholder="Salário"
                           Keyboard="Numeric"
                           FontSize="Medium"
                           PlaceholderColor="#2E2E2E"
                           TextColor="#FF9900"
                           x:Name="Salary"
                           Text="{Binding Salary}"/>

                    <Label Text="Descrição"
                           Margin="5"
                           FontSize="Medium"
                           TextColor="#2E2E2E"/>
                    <Editor HeightRequest="150"
                            TextColor="#FF9900"
                            x:Name="Description"
                            Text="{Binding Description}"/>

                    <StackLayout Orientation="Horizontal">

                        <Label Text="Tipo de Contratação"
                               Margin="5"
                               FontSize="Medium"
                               TextColor="#2E2E2E"/>

                        <Label Text="CLT"
                               Margin="5"
                               FontSize="Medium"
                               TextColor="#2E2E2E"/>

                        <Switch x:Name="TypeOfHiring"
                                IsToggled="{Binding TypeOfHiring}"/>

                        <Label Text="PJ"
                               Margin="5"
                               FontSize="Medium"
                               TextColor="#2E2E2E"/>

                    </StackLayout>

                    <Entry Placeholder="Telefone"
                           Keyboard="Numeric"
                           FontSize="Medium"
                           PlaceholderColor="#2E2E2E"
                           TextColor="#FF9900"
                           x:Name="Telephone"
                           Text="{Binding Telephone}"/>

                    <Entry Placeholder="Email"
                           FontSize="Medium"
                           PlaceholderColor="#2E2E2E"
                           TextColor="#FF9900"
                           x:Name="Email"
                           Text="{Binding Email}"/>

                    <StackLayout Orientation="Horizontal"
                                 VerticalOptions="FillAndExpand"
                                 HorizontalOptions="EndAndExpand"
                                 Margin="10">

                        <Button Text="Cancelar"
                                TextColor="#ffffff"
                                HorizontalOptions="Start"
                                WidthRequest="140"
                                HeightRequest="40"
                                BackgroundColor="#B31313"
                                Clicked="CloseModal"/>

                        <Button Text="Salvar"
                                TextColor="#ffffff"
                                HorizontalOptions="End"
                                WidthRequest="140"
                                HeightRequest="40"
                                BackgroundColor="#2EB313"
                                Clicked="SaveJob"/>
                    </StackLayout>
                </StackLayout>

            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>